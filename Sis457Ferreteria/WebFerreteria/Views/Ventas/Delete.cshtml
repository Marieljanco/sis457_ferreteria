@model WebFerreteria.Models.Venta

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Venta</h1>

<h3>Estás seguro que desea eliminar el registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">Monto Pago</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoPago)
        </dd>
        <dt class="col-sm-2">Monto Cambio</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoCambio)
        </dd>
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.Nombres)
        </dd>
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.IdEmpleadoNavigation.Nombres)
        </dd>
        <dt class="col-sm-2">Usuario Registro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsuarioRegistro)
        </dd>
        <dt class="col-sm-2">Fecha Registro</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar</button> |
        <a asp-action="Index"><i class="fa fa-arrow-left"></i> Volver a la lista</a>
    </form>
</div>
